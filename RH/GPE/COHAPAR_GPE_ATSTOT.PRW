User Function GPEATST()

	_nDias	:= DiasTrab
	
	//APURA O TOTAL DE ATS
	_nVl103 := fbuscapd("103","V")//+fbuscapd("134","V")+fbuscapd("135","V")+fbuscapd("370","V") //TOTAL DOS VALORS HRS EXTRAS
	_nVlTot := (_nVl103/_nDias) * 30
	
	If _nVlTot > 0
		fGeraVerba("980",_nVlTot,,,,,,,,,.T.)
	EndIf  
Return    